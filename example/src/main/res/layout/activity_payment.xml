<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wufeng.commonmvc.ui.PaymentActivity"
    android:orientation="vertical"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_green"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/itv_back"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="{fa-chevron-left}"
                android:textSize="30sp"
                android:textColor="@drawable/touch_white"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_30"
                android:text="@string/wholesaleTrade_payment"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_tradeStatistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_25"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wholesaleTrade_actual_pay"
            android:textSize="@dimen/text_size_25"
            android:textColor="@android:color/black"/>
        <com.wufeng.latte_core.control.FixedEditText
            android:id="@+id/fet_actualAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_border_corner_green"
            android:padding="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/text_size_25"
            app:fixedText="Â¥"
            app:fixedTextGravity="Center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:inputType="numberDecimal"
            android:maxLines="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_ignoreDecimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wholesaleTrade_ignore_decimals"
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/background_green"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background_top_shadow_white">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_payWays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wholesaleTrade_pay_way"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_25"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/itv_payCard"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_payWays"
            android:layout_alignBaseline="@+id/tv_payCard"
            android:text="{fa-credit-card-alt}"
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/background_green"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_payCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wholesaleTrade_pay_card"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_25"
            android:layout_below="@+id/tv_payWays"
            android:layout_toEndOf="@+id/itv_payCard"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_payCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_25"
            android:theme="@style/CheckBoxTheme"
            android:layout_below="@id/tv_payWays"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"/>
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/itv_payCash"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itv_payCard"
            android:layout_alignBaseline="@+id/tv_payCash"
            android:text="{fa-dollar}"
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/background_green"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_payCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wholesaleTrade_pay_cash"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_25"
            android:layout_below="@+id/tv_payCard"
            android:layout_toEndOf="@+id/itv_payCash"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_25"
            android:theme="@style/CheckBoxTheme"
            android:layout_below="@id/cb_payCard"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wholesaleTrade_pay_enter"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_25"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@color/background_green"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>