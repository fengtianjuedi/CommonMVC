<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wufeng.commonmvc.ui.WholesaleTradeActivity"
    android:orientation="vertical"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_green"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/itv_back"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="{fa-chevron-left}"
                android:textSize="30sp"
                android:textColor="@drawable/touch_white"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_30"
                android:text="@string/wholesaleTrade"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/background_corner_shadow_white">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_addBindCategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/background_green"
            android:textSize="@dimen/text_size_25"
            android:textStyle="bold"
            android:text="@string/wholesaleTrade_bindCategory"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_addBindCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_addBindCategoryTitle"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_25"
            android:text="@string/wholesaleTrade_addBindCategory"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_circle_corner__green"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_addMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/tv_addBindCategoryTitle"
            android:layout_marginEnd="20dp"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:text="@string/wholesaleTrade_more"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlv_bindCategoryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_addBindCategoryTitle"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlv_categoryRecordList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_green"
        android:textSize="@dimen/text_size_25"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="@string/wholesaleTrade_pay"
        android:padding="10dp"
        android:gravity="center"/>
</androidx.appcompat.widget.LinearLayoutCompat>