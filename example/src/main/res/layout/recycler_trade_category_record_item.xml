<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_corner_shadow_white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_circle_corner__green"
        android:text="123"
        android:textSize="@dimen/text_size_18"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_categoryPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_18"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:text="123"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"/>
    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/itv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/text_size_25"
        android:layout_alignParentEnd="true"
        android:text="{fa-close}"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_categoryNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_18"
        android:layout_below="@+id/tv_categoryName"
        android:layout_alignParentStart="true"
        android:text="123"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_categoryAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_18"
        android:layout_below="@+id/tv_categoryPrice"
        android:layout_alignParentEnd="true"
        android:text="123"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>